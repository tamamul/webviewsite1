                    <span class="task-text">${task.text}</span>
                    <div class="task-actions">
                        <button class="complete-btn" onclick="toggleComplete(${index})"><i class="fas ${task.completed ? 'fa-undo' : 'fa-check'}"></i></button>
                        <button class="delete-btn" onclick="deleteTask(${index})"><i class="fas fa-trash"></i></button>
                    </div>
                `;
                taskList.appendChild(li);
            });
            
            localStorage.setItem('tasks', JSON.stringify(tasks));
        }
        
        // Ø¥Ø¯Ø§Ø±Ø© Ù‚Ø§Ø¦Ù…Ø© Ø§Ù„Ù…Ø´ØªØ±ÙŠØ§Øª
        function addShoppingItem() {
            const shoppingInput = document.getElementById('shoppingInput');
            const name = shoppingInput.value.trim();
            if (name) {
                shoppingItems.push({ 
                    name: name, 
                    completed: false,
                    quantity: 1
                });
                shoppingInput.value = '';
                renderShoppingList();
                showNotification('ØªÙ…Øª Ø¥Ø¶Ø§ÙØ© Ø§Ù„Ø¹Ù†ØµØ± Ø¨Ù†Ø¬Ø§Ø­!');
            }
        }
        
        function toggleShoppingComplete(index) {
            shoppingItems[index].completed = !shoppingItems[index].completed;
            renderShoppingList();
        }
        
        function deleteShoppingItem(index) {
            shoppingItems.splice(index, 1);
            renderShoppingList();
        }
        
        function increaseQuantity(index) {
            shoppingItems[index].quantity++;
            renderShoppingList();
        }
        
        function decreaseQuantity(index) {
            if (shoppingItems[index].quantity > 1) {
                shoppingItems[index].quantity--;
                renderShoppingList();
            }
        }
        
        function renderShoppingList() {
            const shoppingList = document.getElementById('shoppingList');
            shoppingList.innerHTML = '';
            
            shoppingItems.forEach(function(item, index) {
                const li = document.createElement('li');
                li.className = 'shopping-item' + (item.completed ? ' completed' : '');
                li.innerHTML = `
                    <input type="checkbox" class="complete-checkbox" ${item.completed ? 'checked' : ''} onclick="toggleShoppingComplete(${index})">
                    <div>
                        <div class="shopping-text">${item.name}</div>
                        <div class="quantity-controls">
                            <button class="quantity-btn" onclick="decreaseQuantity(${index})">-</button>
                            <span class="quantity-value">${item.quantity}</span>
                            <button class="quantity-btn" onclick="increaseQuantity(${index})">+</button>
                        </div>
                    </div>
                    <div class="shopping-actions">
                        <button class="complete-btn" onclick="toggleShoppingComplete(${index})"><i class="fas ${item.completed ? 'fa-undo' : 'fa-check'}"></i></button>
                        <button class="delete-btn" onclick="deleteShoppingItem(${index})"><i class="fas fa-trash"></i></button>
                    </div>
                `;
                shoppingList.appendChild(li);
            });
            
            localStorage.setItem('shoppingItems', JSON.stringify(shoppingItems));
        }
        
        // ØªØºÙŠÙŠØ± Ø§Ù„Ø³Ù…Ø§Øª
        function changeTheme(themeNum) {
            const root = document.documentElement;
            
            switch(themeNum) {
                case '1':
                    root.style.setProperty('--primary-color', '#ff9ec3');
                    root.style.setProperty('--secondary-color', '#d6a3fb');
                    root.style.setProperty('--accent-color', '#a5dff9');
                    break;
                case '2':
                    root.style.setProperty('--primary-color', '#a5dff9');
                    root.style.setProperty('--secondary-color', '#d6a3fb');
                    root.style.setProperty('--accent-color', '#ff9ec3');
                    break;
                case '3':
                    root.style.setProperty('--primary-color', '#ffb3ba');
                    root.style.setProperty('--secondary-color', '#ffdfd3');
                    root.style.setProperty('--accent-color', '#c8a2c8');
                    break;
                case '4':
                    root.style.setProperty('--primary-color', '#c8a2c8');
                    root.style.setProperty('--secondary-color', '#b19cd9');
                    root.style.setProperty('--accent-color', '#ffd1dc');
                    break;
                case '5':
                    root.style.setProperty('--primary-color', '#ffd1dc');
                    root.style.setProperty('--secondary-color', '#f8c8dc');
                    root.style.setProperty('--accent-color', '#c8a2c8');
                    break;
            }
            
            showNotification('ØªÙ… ØªØºÙŠÙŠØ± Ø§Ù„Ø³Ù…Ø© Ø¨Ù†Ø¬Ø§Ø­!');
        }
        
        // Ø¹Ø±Ø¶ Ø§Ù„Ø¥Ø´Ø¹Ø§Ø±Ø§Øª
        function showNotification(text) {
            const notification = document.getElementById('notification');
            notification.querySelector('.notification-text').textContent = text;
            notification.classList.add('show');
            
            setTimeout(function() {
                notification.classList.remove('show');
            }, 3000);
        }
    </script>
